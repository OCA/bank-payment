<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="plaid_transfer_view_tree" model="ir.ui.view">
            <field name="name">plaid.transfer.view.tree</field>
            <field name="model">plaid.transfer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date" />
                    <field name="name" />
                    <field name="description" />
                    <field name="amount" />
                    <field name="currency_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="plaid_transfer_view_form" model="ir.ui.view">
            <field name="name">plaid.transfer.view.form</field>
            <field name="model">plaid.transfer</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="host" invisible="1" />
                        <button
                            name="action_sandbox_simulation"
                            type="object"
                            class="btn btn-secondary"
                            attrs="{'invisible': [('host', '!=', 'sand')]}"
                            string="Simulate transfer"
                        />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <label for='name' class="oe_edit_only" />
                        <h2>
                            <field name="name" />
                        </h2>
                        <group>
                            <group>
                                <field name="amount" widget="monetary" />
                                <field name="currency_id" invisible="1" />
                            </group>
                            <group>
                                <field name="description" readonly="1" />
                                <field name="create_date" readonly="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="plaid_transfer_action" model="ir.actions.act_window">
            <field name="name">Plaid transfer</field>
            <field name="res_model">plaid.transfer</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False, 'edit': False}</field>
        </record>
        <menuitem
            id="plaid_transfer_menu_tech"
            name="Transfer"
            action="plaid_transfer_action"
            parent="technical_menu_category_plaid"
            sequence="10"
        />
    </data>
</odoo>
