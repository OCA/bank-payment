<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_payment_mode_layout_line_view_form" model="ir.ui.view">
        <field name="name">account.payment.mode.layout.line.view.form</field>
        <field name="model">account.payment.mode.layout.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="sequence" />
                        <field name="value_length" />
                        <field name="infill" />
                        <field name="characters_to_remove" />
                        <field name="alignment" />
                        <field name="description" />
                        <field
                            name="code"
                            widget="ace"
                            options="{'mode': 'python'}"
                            placeholder="Enter Python code here."
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_payment_mode_layout_line_view_tree" model="ir.ui.view">
        <field name="name">account.payment.mode.layout.line.view.tree</field>
        <field name="model">account.payment.mode.layout.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="usage" invisible="1" />
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="value_length" optional="hide" />
                <field name="infill" optional="hide" />
                <field name="alignment" optional="hide" />
                <field
                    name="code"
                    widget="ace"
                    options="{'mode': 'python'}"
                    placeholder="Enter Python code here."
                    optional="hide"
                />
                <field name="description" optional="show" />
            </tree>
        </field>
    </record>

</odoo>
