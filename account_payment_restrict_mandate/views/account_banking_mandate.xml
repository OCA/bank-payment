<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_mandate_form" model="ir.ui.view">
            <field name="model">account.banking.mandate</field>
            <field name="inherit_id" ref="account_banking_mandate.view_mandate_form" />
            <field name="arch" type="xml">
                <field name="last_debit_date" position="before">
                    <field name="max_amount_per_date" />
                    <field name="repetition_rule_text" attrs="{'required': [('max_amount_per_date', '>', 0)]}" />
                    <field name="date_start" attrs="{'required': [('max_amount_per_date', '>', 0)]}" />
                    <field name="date_end" />
                    <field name="max_amount" />
                </field>
            </field>
        </record>
    </data>
</openerp>
