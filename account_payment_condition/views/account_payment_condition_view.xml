<odoo>

    <record model="ir.ui.view" id="account_payment_condition_form_view">
        <field name="name">account.payment.condition.form (in account_payment_condition)</field>
        <field name="model">account.payment.condition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="payment_mode_id"/>
                            <field name="payment_term_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_payment_condition_search_view">
        <field name="name">account.payment.condition.search (in account_payment_condition)</field>
        <field name="model">account.payment.condition</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="account_payment_condition_tree_view">
        <field name="name">account.payment.condition.tree (in account_payment_condition)</field>
        <field name="model">account.payment.condition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_payment_condition_act_window">
        <field name="name">Payment Condition</field>
        <field name="res_model">account.payment.condition</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="account_payment_condition_menu">
        <field name="name">Payment Condition</field>
        <field name="parent_id" ref="account.account_management_menu"/>
        <field name="action" ref="account_payment_condition_act_window"/>
        <field name="sequence" eval="35"/>
    </record>

</odoo>
