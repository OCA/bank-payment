<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_payment_order_edi_form" model="ir.ui.view">
        <field name="name">account_payment_order_edi_functionnality.form</field>
        <field name="model">account.payment.order</field>
        <field
            name="inherit_id"
            ref="account_payment_order.account_payment_order_form"
        />
        <field name="arch" type="xml">
            <field name="payment_mode_id" position="after">
                <field name="disable_edi_auto" />
                <field
                    name="edi_exchange_type_id"
                    attrs="{'invisible': [('disable_edi_auto', '=', True)],
                'required': [('disable_edi_auto', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
