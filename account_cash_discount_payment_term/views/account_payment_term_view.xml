<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_payment_term_form" model="ir.ui.view">
            <field name="name">account.payment.term.form (account_cash_deposit_payment_term)</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[field[@name='name']]" position="after">
                    <group name="invoice_discount" string="Invoice Discount">
                        <field name="discount_percent" />
                        <field name="discount_delay" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
