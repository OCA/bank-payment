<odoo>

    <record model="ir.ui.view" id="payment_transaction_form_view">
        <field name="name">payment.transaction.form (in payment_transaction_persistent_message)</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state_message']/parent::group" position="after">
                <group string="Persistent Message">
                    <field name="persistent_state_message" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
