<odoo>

    <record model="ir.ui.view" id="account_payment_order_form">
        <field name="name">account.payment.order.form (in account_payment_order_check)</field>
        <field name="model">account.payment.order</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_order_form"/>
        <field name="arch" type="xml">
            <field name="company_partner_bank_id" position="after">
                <field name="payment_method_code" invisible="1"/>
                <field name="check_number" attrs="{'invisible': [('payment_method_code', '!=', 'check_printing')]}"/>
	    </field>
        </field>
    </record>

</odoo>
